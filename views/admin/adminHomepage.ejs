<% layout("layouts/boilerplate")%>
<link rel="stylesheet" href="/css/adminhome.css">
  <div class="container mx-auto mt-4">
    <div class="row">
     <% products.forEach(element => { %>
      <div class="col-md-4 mb-3">
        <div class="card h-100">
             <img class="card-img-top" src="<%= element.imageUrl%>" alt="<%= element.title%>">
             <div class="card-body d-flex flex-column bg-dark text-white">
              <h5 class="card-title"><%= element.title%></h5>
              <h6 class="card-title">Price:$<%=element.price%></h6>
              <p class="card-text"><%= element.description%></p>
              <div class="card-nody">
                <a class="card-link btn btn-warning mx-3" href="/admin/<%=element._id %>/edit">Edit</a>
                <form class="d-inline" action="/admin/<%=element._id %>?_method=DELETE" method="post">
                 <button type="submit" class="btn btn-danger mx-3">Delete</button>
               </form>
              </div>
            </div>
          </div>
          </div>
        <% }) %>
        