<% layout("layouts/boilerplate")%>
<link rel="stylesheet" href="/css/admin.css">
<h1>Admin Add Form Item</h1>
<form 
action="/admin/add-product" method="POST" novalidate class="needs-validation">
  <div class="form-group">
    <label for=" title">Title</label>
    <input class="form-control form-control-lg" type="text" name="title" id="title" placeholder="Enter item Title" required>
    <div class="valid-feedback">
      Looks good!
    </div>
  </div>
  <div class="form-group">
    <label for="imageUrl">imageUrl</label>
    <input class="form-control form-control-lg" type="url" name="imageUrl" id="imageUrl" placeholder="Enter imageUrl" required>
    <div class="valid-feedback">
      Looks good!
    </div>
  </div>
  <div class="form-group">
    <label for="price">Price</label>
    <input class="form-control form-control-lg" type="number" name="price" id="price" step="0.01" placeholder="Enter Item Price" required>
    <div class="valid-feedback">
      Looks good!
    </div>
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <input class="form-control form-control-lg" type="text" name="description" id="description" placeholder="Enter Item Description" required>
    <div class="valid-feedback">
      Looks good!
    </div>
  </div>
  <div class="form-group">
    <label for="qty">Qty</label>
    <input class="form-control form-control-lg" type="number" name="qty" id="qty" placeholder="Enter Item Quantity" required>
    <div class="valid-feedback">
      Looks good!
    </div>
    <button type="submit" class="button_slide slide_left">Add Product</button>
    <div class="valid-feedback">
      Successfully Add it !
    </div>
  </div>
</form>









