<% layout("layouts/boilerplate")%>
  <div class="row">
    <div class="col text-center d-flex justify-content-center">
      <div class="card mb-3 mt-3">
        <div class="card-header bg-dark text-success text-center">
        <h3 class="card-title mt-3">Order Details <%= findUser.username%></h3>
      </div>
      <div class="card-body bg-dark text-white" style="max-width: 35rem;" >
        <img src="https://images.unsplash.com/photo-1499083097717-a156f85f0516?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1742&q=80" class="card-img-top" alt="...">
          <ul class="list-group list-group-flush">
           <li  class="list-group-item border-dark "><b>Order number: <%= randomNumber%></b></li>
           <li  class="list-group-item border-dark"><b>items in cart: <%=findUser.cart.length%></b></li>
    <% const total = findUser.cart.reduce((sum, cur) => sum + cur.price, 0) %>
    <li  class="list-group-item border-dark"><b>Order total: $ <%= total %></b></li>
      <li  class="list-group-item"><a href="#" class="card-link btn btn-success">Place your order</a></li>
    </ul>
        </div>
      </div>
    </div>
  </div>





