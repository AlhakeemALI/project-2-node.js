<% layout("layouts/boilerplate")%>
<link rel="stylesheet" href="/css/cart.css">
<div class="d-flex justify-content-between mb-3">
    <h1 class="top mx-3 text-white"> Happy to see you <%= findUser.username%></h1>
</div>
<% findUser.cart.forEach(element => { %>
<div class="card mb-3">
    <div class="row md-4">
        <div class="col">
            <img class="img-fluid bg-dark" alt="" src="<%= element.imageUrl%>">
        </div>
        <div class="col-md-8">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= element.title%></h5>
                <p class="card-text"><%= element.description%></p>
                <p class="card-text">
                    <h5 class="card-title">Price:$<%=element.price%></h5>
                </p>
                <div class="d-flex justify-content-between mb-3">
                <form action="/user/<%=findUser._id%>/product/<%=element._id%>?_method=DELETE" method="post">
                  <button type="submit" class="btn btn-danger">Remove</button>
                </form>
                <a  href="" class="btn btn-warning">Back To home page</a>
              </div>
            </div>
        </div>
    </div>
</div>
<% })%>
<a href="/checkout/<%=findUser._id%>" class="btn btn-success mb-3">Peoceed to checkout</a>


