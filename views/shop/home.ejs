
<% layout("layouts/boilerplate")%>
<link rel="stylesheet" href="/css/homepage.css">
<div class="container  mt-3 mb-3">
  <div class="row">
     <% products.forEach(element => { %>
      <div class="col-md-4">
        <div class="card h-100">
             <img class="card-img-top" src="<%= element.imageUrl%>" alt="<%= element.title%>">
             <div class="card-body d-flex flex-column align-content-between">
               <div class="d-flex justify-content-around">
              <h5 class="card-title"><%= element.title%></h5>
              <h5 class="card-title ">Price:$<%=element.price%></h5>
            </div>
              <% if (element.qty > 0) { %>
                <p class="card-text display stock"><b>In Stock</b></p>
                <% } else { %>
                  <p class="card-text display outstock"><b>Out Stock</b></p>
                  <% } %>
              <p class="card-text"><%= element.description%></p>
              <div class="card-nody">
              <a class="card-link btn btn-success mx-3 " href="/product/<%=element._id%>">Details</a>
              <form class="d-inline needs-validation" action="/user<%=element._id%>/add-to-cart" method="post"novalidate >
                 <button type="submit" class="btn btn-warning mx-3">Add to Cart</button>
               </form>
              </div>
            </div>
          </div>
          </div>
        <% }) %>

       
        

        






    





   
  